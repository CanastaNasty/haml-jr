[
  {
    "text": "Choose a ticket class:"
  },
  {
    "tag": "select",
    "children": [
      {
        "unbufferedCode": "on \"change\", @chosenTicket"
      },
      {
        "unbufferedCode": "each @tickets, ->",
        "children": [
          {
            "tag": "option",
            "bufferedCode": "@name"
          }
        ]
      }
    ]
  },
  {
    "tag": "button",
    "text": "Clear",
    "children": [
      {
        "unbufferedCode": "on \"click\", @resetTicket"
      }
    ]
  },
  {
    "unbufferedCode": "with @chosenTicket, ->",
    "children": [
      {
        "tag": "p",
        "children": [
          {
            "unbufferedCode": "if @price",
            "children": [
              {
                "text": "You have chosen"
              },
              {
                "tag": "b",
                "bufferedCode": "@name"
              },
              {
                "tag": "span",
                "children": [
                  {
                    "text": "$"
                  },
                  {
                    "bufferedCode": "@price"
                  }
                ]
              }
            ]
          },
          {
            "unbufferedCode": "else",
            "children": [
              {
                "text": "No ticket chosen"
              }
            ]
          }
        ]
      }
    ]
  }
]